### ------------------- GET : livre par ID -------------------
# Remplace ID_DU_LIVRE par l'ID réel du livre
GET {{baseUrl}}/ID_DU_LIVRE
Content-Type: application/json

### ------------------- GET : meilleurs livres -------------------
GET {{baseUrl}}/bestrating
Content-Type: application/json

### ------------------- POST : créer un livre -------------------
POST {{baseUrl}}
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "title": "Mon nouveau livre",
  "author": "Moi",
  "year": 2025,
  "genre": "Fiction"
}

### ------------------- PUT : modifier un livre -------------------
# Remplace ID_DU_LIVRE par l'ID du livre à modifier
PUT {{baseUrl}}/ID_DU_LIVRE
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "title": "Titre modifié",
  "author": "Moi",
  "year": 2025,
  "genre": "Fiction"
}

### ------------------- DELETE : supprimer un livre -------------------
# Remplace ID_DU_LIVRE par l'ID du livre à supprimer
DELETE {{baseUrl}}/ID_DU_LIVRE
Authorization: Bearer {{token}}
Content-Type: application/json

### ------------------- POST : ajouter une note -------------------
